{
  "manifest_version": 3,
  "name": "Chee - Chess.com Live Analysis",
  "version": "1.0.0",
  "description": "Real-time Stockfish analysis for chess.com games",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.chess.com/game/*",
        "*://www.chess.com/play/*"
      ],
      "js": ["content.js"],
      "css": ["panel.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "stockfish.js",
        "stockfish.wasm",
        "stockfish-worker.js"
      ],
      "matches": ["*://www.chess.com/*"]
    }
  ]
}
